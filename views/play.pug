extends layout

block content
  .row
    .col-xs-12.col-xs-offset-0.col-sm-10.col-sm-offset-1.col-lg-6.col-lg-offset-3(style='max-width: 640px; max-height: 390px; padding-bottom: 32%; min-width: 320px; min-height: 195px; margin-top: 30px')

      iframe(id='player', src='https://www.youtube.com/embed/videoseries?list=PLAlosoTOSU3zHRLG67G8h6BAVxp62Y6Za&enablejsapi=1&rel=0&controls=0&showinfo=0&autoplay=0', frameborder='0', allow='encrypted-media', allowfullscreen='false', style='position:absolute; top:0; left:0; width: 100%; height:100%;')

      #startButton(role='button', onClick='playVideo()', style='position:absolute; top:0; left:0; width: 100%; height:100%; vertical-align: middle; text-align: center; z-index: 1000; background-color: #9F27AD;')

        img(src='/images/logo.png', style='display: block; width: 70%; height: 52%; margin-top: 12%; margin-left: auto; margin-right:auto')

        span.align-text-bottom(id='playStatus', style='display:inline-block; max-width: 80%; color: #fff; font-size: 18px;') Click to Play
  .row
      // play from here
      div(class="container-fluid")
        div(class="row")
          div(class="col-md-8" id="affdex_elements" style="width:680px;height:480px; display:none;")
          div(class="col-md-4")
            div( style="height:25em;")
              strong EMOTION TRACKING RESULTS
              div( id="results" style="word-wrap:break-word;")
            
            div
              strong DETECTOR LOG MSGS
            
            div(id="logs")
          
        
        div
          button(id="start" onclick="onStart()") Play
          button(id="stop" onclick="onStop()") Stop
          button( id="reset" onclick="onReset()") Reset

            
  // JS below
  script( type="text/javascript" src="https://download.affectiva.com/js/3.2/affdex.js")
  script( type='text/javascript' src="/js/affectiva.js") 
      

